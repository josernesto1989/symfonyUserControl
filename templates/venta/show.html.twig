{% extends 'base.html.twig' %}

{% block title %}Venta{% endblock %}

{% block body %}
    <h1>Venta</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ventum.id }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ ventum.descripcion }}</td>
            </tr>
            <tr>
                <th>Hora</th>
                <td>{{ ventum.hora ? ventum.hora|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ ventum.fecha ? ventum.fecha|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Trabajo</th>
                <td>{{ ventum.trabajo }}</td>
            </tr>
            <tr>
                <th>Ingreso</th>
                <td>{{ ventum.ingreso }}</td>
            </tr>
            <tr>
                <th>Costo</th>
                <td>{{ ventum.costo }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('ventasmodule') }}">back to list</a>

    <a href="{{ path('venta_edit', {'id': ventum.id}) }}">edit</a>

    {{ include('venta/_delete_form.html.twig') }}
{% endblock %}
